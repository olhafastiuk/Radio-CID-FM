            .top__inner__slideContainer    
                input.top__inner__play-slider(type="range" min="1" max="100" value="1" id="MyRange")
                
        .top__tracks
            .top__tracks-1 
                p Попередній трек
                p 23:40 ⠀A Fine Frenzy – Winter White
            .top__tracks-2 
                .top__tracks-2-text
                    p Зараз грає
                    p 23:42 ⠀Sia – My Old Santa Claus
            .top__tracks-3  
                p Наступний трек
                p 23:46 ⠀O.TORVALD – Крик
    section.page-section
        .sliders 
            h2.sliders__text Скоро
            .main-carousel(data-flickity='{ "cellAlign": "left", "contain": true, "freeScroll": true, "wrapAround": true}')
                .carousel-cell 
                    img(src="./images/main/slider-1.jpg", alt="")
